{% extends 'backbase.html.twig' %}

{% block title %}Vehicule
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-4">Vehicule</h1>

		<table class="table table-bordered table-striped">
			<tbody>
				<tr>
					<th class="w-25">Immatriculation</th>
					<td>{{ vehicule.immatriculation }}</td>
				</tr>
				<tr>
					<th>TypeDuVehicule</th>
					<td>{{ vehicule.typeDuVehicule }}</td>
				</tr>
				<tr>
					<th>Marque</th>
					<td>{{ vehicule.marque }}</td>
				</tr>
				<tr>
					<th>CinConducteur</th>
					<td>{{ vehicule.cinConducteur }}</td>
				</tr>
				<tr>
					<th>Etat</th>
					<td>{{ vehicule.etat }}</td>
				</tr>
				<tr>
					<th>Kilometrage</th>
					<td>{{ vehicule.kilometrage }}</td>
				</tr>
				<tr>
					<th>Imagev</th>
					<td>{{ vehicule.imagev }}</td>
				</tr>
			</tbody>
		</table>

		<div class="d-flex justify-content-between">
			<a href="{{ path('app_vehicule_contoller_index') }}" class="btn btn-secondary">Back to list</a>

			<div>
				{% if vehicule.immatriculation is not empty %}
					<a href="{{ path('app_vehicule_contoller_edit', {'immatriculation': vehicule.immatriculation}) }}" class="btn btn-primary">Edit</a>
				{% else %}
					<span class="btn btn-primary disabled">Edit</span>
				{% endif %}

				{{ include('vehicule_contoller/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}

			</div>

		</div>
	</div>
{% endblock %}
