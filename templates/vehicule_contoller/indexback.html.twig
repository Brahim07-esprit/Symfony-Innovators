{% extends 'frontbase.html.twig' %}

{% block title %}Vehicule index
{% endblock %}

{% block body %}
    <h1>Vehicule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Immatriculation</th>
                <th>TypeDuVehicule</th>
                <th>Marque</th>
                <th>CinConducteur</th>
                <th>Etat</th>
                <th>Kilometrage</th>
                <th>Imagev</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for vehicule in vehicules %}
                <tr>
                    <td>{{ vehicule.immatriculation }}</td>
                    <td>{{ vehicule.typeDuVehicule }}</td>
                    <td>{{ vehicule.marque }}</td>
                    <td>{{ vehicule.cinConducteur }}</td>
                    <td>{{ vehicule.etat }}</td>
                    <td>{{ vehicule.kilometrage }}</td>
                    <td>{{ vehicule.imagev }}</td>
                    <td>
                        {% if vehicule.immatriculation is not empty %}
                            <a href="{{ path('app_vehicule_contoller_show', {'immatriculation': vehicule.immatriculation}) }}" class="btn btn-primary">Show</a>
                        {% else %}
                            <span class="btn btn-primary disabled">Show</span>
                        {% endif %}

                        {% if vehicule.immatriculation is not empty %}
                            <a href="{{ path('app_vehicule_contoller_edit', {'immatriculation': vehicule.immatriculation}) }}" class="btn btn-primary">Edit</a>
                        {% else %}
                            <span class="btn btn-primary disabled">Edit</span>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vehicule_contoller_new') }}">Create new</a>
{% endblock %}
